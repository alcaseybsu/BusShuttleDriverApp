@model BusShuttleDriver.Web.ViewModels.RouteCreateModel

@{
    ViewData["Title"] = "Create Route";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Create Route</button>
    <div class="form-group">
        <label asp-for="RouteName" class="control-label">Route Name</label>
        <input asp-for="RouteName" class="form-control" />
        <span asp-validation-for="RouteName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedLoopId" class="control-label">Select Loop</label>
        <select asp-for="SelectedLoopId" asp-items="Model.AvailableLoops" class="form-control"></select>
        <span asp-validation-for="SelectedLoopId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedStopIds" class="control-label">Select Stops</label>
        <select asp-for="SelectedStopIds" asp-items="Model.AvailableStops" multiple class="form-control" id="stopsList">
        </select>
        <span asp-validation-for="SelectedStopIds" class="text-danger"></span>
    </div>

    <!-- Hidden input to store ordered stop IDs -->
    <input type="hidden" id="orderedStops" name="OrderedStopIds" />

    <button type="button" id="moveUp" class="btn btn-secondary">Move Up</button>
    <button type="button" id="moveDown" class="btn btn-secondary">Move Down</button>
</form>
<a href="@Url.Action("Dashboard", "Manager")" class="btn btn-secondary">Back to Dashboard</a>

<script>
    $(document).ready(function () {
        // Move selected item up
        $('#moveUp').click(function () {
            var selectedOption = $('#stopsList option:selected');
            if (selectedOption.index() > 0) {
                selectedOption.prev().before(selectedOption);
            }
            updateStopOrder();
        });

        // Move selected item down
        $('#moveDown').click(function () {
            var selectedOption = $('#stopsList option:selected');
            if (selectedOption.index() < $('#stopsList option').length - 1) {
                selectedOption.next().after(selectedOption);
            }
            updateStopOrder();
        });

        function updateStopOrder() {
            var orderedIds = $('#stopsList option').map(function () {
                return $(this).val();
            }).get().join(',');
            $('#orderedStops').val(orderedIds);
        }
    });
</script>
