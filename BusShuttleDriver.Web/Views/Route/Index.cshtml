@model IEnumerable<BusShuttleDriver.Web.ViewModels.RouteViewModel> 

@{
    ViewData["Title"] = "Routes";
}

<h2>@ViewData["Title"]</h2>

<!-- Link to Create Route -->
<a asp-action="Create" class="btn btn-success">Create New Route</a>

<!-- Existing Routes List -->
<table class="table">
    <thead>
        <tr>
            <th>Route Name</th>
            <th>Bus Number</th>
            <th>Loop</th>
            <th>Stops</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var route in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => route.RouteName)</td>
            <td>@Html.DisplayFor(modelItem => route.BusNumber)</td> <!-- Assuming BusNumber is part of the RouteViewModel -->
            <td>@route.LoopName</td> <!-- Ensure LoopName is part of your model -->
            <td>
                <!-- Display number of stops; clickable to expand -->
                <a href="@Url.Action("Details", new { id = route.Id })">@route.Stops.Count</a>
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = route.Id })" class="btn btn-secondary">Edit</a>
                <a href="@Url.Action("EditStops", new { routeId = route.Id })" class="btn btn-primary">Manage Stops</a>
                <a href="@Url.Action("Delete", new { id = route.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
