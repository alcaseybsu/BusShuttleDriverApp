@model IEnumerable<BusShuttleDriver.Web.ViewModels.RouteViewModel>

@{
    ViewData["Title"] = "Routes";
}

<h2>@ViewData["Title"]</h2>

<!-- Error Message Display -->
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
    @ViewBag.ErrorMessage
</div>
}

<!-- Link to Create Route -->
<a asp-action="Create" class="btn btn-success">Create New Route</a>

<!-- Existing Routes List -->
<table class="table">
    <thead>
        <tr>
            <th>Route Name</th>
            <th>Loop</th>
            <th>Stops</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var route in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => route.RouteName)</td>
                <td>@Html.DisplayFor(modelItem => route.LoopName)</td>
                <td>
                    <!-- Display number of stops; click to view details -->
                    <a asp-action="Details" asp-route-id="@route.Id">Stops (@route.StopsCount)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@route.Id" class="btn btn-secondary">Edit</a>
                    <button type="button" class="btn btn-danger delete-route" data-route-id="@route.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Dashboard", "Manager")" class="btn btn-secondary">Back to Dashboard</a>



@section scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.delete-route').click(function (e) {
                e.preventDefault();
                if (confirm('Are you sure you want to delete this route?')) {
                    var routeId = $(this).data('route-id');
                    $.ajax({
                        url: '@Url.Action("Delete", "Route")',
                        type: 'POST',
                        data: { id: routeId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        success: function (result) {
                            location.reload();  // Reload the page to update the list
                        },
                        error: function (xhr, status, error) {
                            alert('Error deleting route: ' + error);
                        }
                    });
                }
            });
        });
    </script>
}
