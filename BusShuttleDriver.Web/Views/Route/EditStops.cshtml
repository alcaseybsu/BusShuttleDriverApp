@model BusShuttleDriver.Web.ViewModels.EditStopsViewModel

<h2>Edit Stops for @Model.RouteName</h2>

<form asp-action="EditStops" method="post">
    <input type="hidden" name="RouteId" value="@Model.RouteId" />
    <table class="table">
        <thead>
            <tr>
                <th>Stop Name</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Stops.Count; i++)
        {
            <tr>
                <td>@Html.DisplayFor(_ => Model.Stops[i].Name)</td>
                <td><input asp-for="@Model.Stops[i].Order" class="form-control" type="number" /></td>
            </tr>
        }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
