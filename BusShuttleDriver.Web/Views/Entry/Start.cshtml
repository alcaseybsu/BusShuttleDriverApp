@model BusShuttleDriver.Web.ViewModels.StartViewModel

@{
    ViewData["Title"] = "Driver Dashboard";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Start Your Route</h1>
    <form asp-action="Start" method="post" class="mt-4">
        <div class="form-group">
            <label for="loopSelect">Select Loop:</label>
            @if (Model.AvailableLoops != null && Model.AvailableLoops.Any())
            {
                <select id="loopSelect" asp-for="SelectedLoopId" asp-items="Model.AvailableLoops" class="form-control"></select>
            }
            else
            {
                <p>No loops available.</p>
            }
        </div>
        <div class="form-group">
            <label for="busSelect">Select Bus:</label>
            @if (Model.AvailableBuses != null && Model.AvailableBuses.Any())
            {
                <select id="busSelect" asp-for="SelectedBusId" asp-items="Model.AvailableBuses" class="form-control"></select>
            }
            else
            {
                <p>No buses available.</p>
            }
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Start Route</button>
    </form>
</div>
