@model IEnumerable<BusShuttleDriver.Web.ViewModels.LoopViewModel>

@{
    ViewData["Title"] = "Loop Index";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var loop in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => loop.LoopName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@loop.Id" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@loop.Id" method="post" class="d-inline"
                            onsubmit="return confirm('Are you sure you want to delete this loop?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No loops available.</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create" asp-controller="Loop" class="btn btn-success">Add New Loop</a>
    <a asp-action="Dashboard" asp-controller="Manager" class="btn btn-secondary" style="float:right">Back to Dashboard</a>
</div>

<a asp-action="RouteCreate" asp-controller="Loop" class="btn btn-success">Create New Route</a>


@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.delete-route').click(function (e) {
                e.preventDefault();
                if (confirm('Are you sure you want to delete this route?')) {
                    var routeId = $(this).data('route-id');
                    $.ajax({
                        url: '@Url.Action("Delete", "Route")',
                        type: 'POST',
                        data: {
                            id: routeId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (result) {
                            location.reload();  // Reload the page to update the list
                        },
                        error: function (xhr, status, error) {
                            alert('Error deleting route: ' + error);
                        }
                    });
                }
            });
        });
    </script>
}
