@model IEnumerable<BusShuttleDriver.Data.ApplicationUser>

<h2>Inactive Drivers</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Firstname</td>
            <td>@user.Lastname</td>
            <td>@user.Role</td>
            <td>@(user.IsActive ? "Active" : "Inactive")</td>
            <td>
                @if (!user.IsActive)
                {
                    <a asp-action="Activate" asp-route-id="@user.Id" class="btn btn-primary">Activate</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

