@using BusShuttleDriver.Web.ViewModels
@model IEnumerable<BusShuttleDriver.Web.ViewModels.DriverViewModel>

<h2>Inactive Drivers</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var driver in Model)
    {
        <tr>
            <td>@driver.Firstname</td>
            <td>@driver.Lastname</td>
            <td>@driver.Email</td>
            <td>@driver.Role</td>
            <td>@(driver.IsActive ? "Active" : "Inactive")</td>
            <td>
                @if (!driver.IsActive)
                {
                    <a asp-action="Activate" asp-route-id="@driver.Id" class="btn btn-primary">Activate</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>


